<?xml version="1.0" encoding="UTF-8"?>

<configuration>

	<appender name="proptiger-website" class="ch.qos.logback.core.FileAppender">
		<file>/opt/log/proptiger-website.log</file>
		<append>true</append>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{5} - %msg%n</pattern>
		</encoder>
	</appender>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
	    <encoder>
	      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{5} - %msg%n</pattern>
	    </encoder>
   </appender>

	<logger name="locality.review" level="DEBUG" additivity="false">
		<appender-ref ref="proptiger-website" />
	</logger>
	<logger name="project.review" level="DEBUG" additivity="false">
		<appender-ref ref="proptiger-website" />
	</logger>
	<logger name="project" level="DEBUG" additivity="false">
		<appender-ref ref="proptiger-website" />
	</logger>
	<logger name="exception.handler" level="DEBUG" additivity="true">
		<appender-ref ref="proptiger-website" />
	</logger>
	
	<logger name="property" level="DEBUG" additivity="true">
		<appender-ref ref="proptiger-website" />
	</logger>

	<root level="ERROR">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>